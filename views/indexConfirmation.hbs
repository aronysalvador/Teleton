          <input class="form-control mb-2" value = "{{{datas.addres}}}"  disabled>
          <input class="form-control mb-2" value = "{{{datas.city}}}"  disabled>  
          <input class="form-control mb-2" value = "{{{datas.region}}}"  disabled>
          <input class="form-control mb-2" value = "{{{datas.country}}}" disabled>
          <input class="form-control mb-4" value = "{{{datas.phone}}}"  disabled>          
      </div>
      <div class="col-md-1 col-sm-1">
         <br><br><br>    
          <h2 class="form-control">NameC.</h2>
          <h6 class="form-control">NumberC</h6>
          <h6 class="form-control">SegurC.</h6>
          <h6 class="form-control">ExpDate</h6>
          <h6 class="form-control">Card</h6>
      </div>
        <div class="col-md-3 col-sm-3">
